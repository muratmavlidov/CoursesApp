<h1>Редактировать {{ title }}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" required value="{{ title }}">
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название курса" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="price" type="text" name="price" class="validate" required value="{{ price }}">
    <label for="price">Цена</label>
    <span class="helper-text" data-error="Введите цену курса" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" name="img" class="validate" required value="{{ img }}">
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="Введите URl картинки" data-success="right"></span>
  </div>

  <input type="hidden" name="id" value={{ id }}> 

  <button class="btn btn=primary">
    Редактировать курс
  </button>
</form>